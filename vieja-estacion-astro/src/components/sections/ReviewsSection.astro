---
// Reviews section component
import ReviewCard from '../ui/ReviewCard.astro';

const reviews = [
  {
    stars: 5,
    text: 'Una experiencia única. La combinación de buena música y excelente comida hace de este lugar algo especial. Las costillas BBQ son imperdibles.',
    name: 'María G.',
    role: 'Cliente frecuente'
  },
  {
    stars: 5,
    text: 'El ambiente es increíble, especialmente los jueves de música acústica. El servicio es excelente y la comida deliciosa. Definitivamente volveré.',
    name: 'Juan P.',
    role: 'Músico local'
  },
  {
    stars: 5,
    text: 'La decoración del lugar te transporta a otra época. Me encanta la historia detrás del bar y cómo han mantenido la esencia de la antigua estación.',
    name: 'Ana M.',
    role: 'Historiadora'
  },
  {
    stars: 5,
    text: 'Los eventos de música en vivo son espectaculares. El sonido es perfecto y la selección de bandas es excelente. ¡El mejor lugar para terminar la semana!',
    name: 'Carlos R.',
    role: 'Amante de la música'
  },
  {
    stars: 5,
    text: 'La tabla de quesos es extraordinaria, y el servicio siempre atento. El ambiente rústico-moderno crea el equilibrio perfecto para una noche especial.',
    name: 'Laura B.',
    role: 'Foodie'
  }
];
---

<section id="resenas" class="reviews-section">
  <div class="section-header">
    <h2>Reseñas</h2>
    <p class="subtitle">Lo que dicen nuestros clientes</p>
  </div>
  <div class="reviews-carousel">
    <div class="reviews-track" id="reviews-track">
      {reviews.map(review => (
        <ReviewCard {...review} />
      ))}
    </div>
  </div>
</section>
